{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/modules/**/controller/*.ts"],
    "spec": {
        "outputDirectory": "src/build",
        "specVersion": 3,
        "outputFormat": "json",
        "specFileBaseName": "swagger"
    },
    "routes": {
        "routesDir": "src/build",
        "iocModule": "src/utilities/ioc.ts",
        "esm": true
    },
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {}
    }
}
